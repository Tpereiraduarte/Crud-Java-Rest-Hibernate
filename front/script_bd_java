CREATE TABLE usuarios(
	ID_USUARIO INT AUTO_INCREMENT,
	NOME VARCHAR(100),
	SOBRENOME VARCHAR(200),
	EMAIL VARCHAR(150),
	SENHA VARCHAR(50),
	PRIMARY KEY (ID_USUARIO)
)
CREATE TABLE palestras(
	ID_PALESTRA INT AUTO_INCREMENT,
	TEMA VARCHAR(100),
	DESCRICAO VARCHAR(600),
	DATA DATE,
	PALESTRANTE VARCHAR(150),
    EVENTO_ID INT,
    SALA_ID INT,
	PRIMARY KEY (ID_PALESTRA)
)
CREATE TABLE salas(
	ID_SALA INT AUTO_INCREMENT,
	CADEIRA INT,
	PROJETOR INT,
	COMPUTADOR INT,
	PRIMARY KEY (ID_SALA)
)
CREATE TABLE eventos(
	ID_EVENTO INT AUTO_INCREMENT,
	NOME VARCHAR(200),
	DATA_INICIAL DATE,
	DATA_FINAL DATE,
	SALA_ID INT,
	PRIMARY KEY (ID_EVENTO)
)
CREATE TABLE usuariopalestras(
	ID_USUARIO_PALESTRA INT AUTO_INCREMENT,
    USUARIO_ID INT,
    PALESTRA_ID INT,
	PRIMARY KEY (ID_USUARIO_PALESTRA)
)
ALTER TABLE java_jdbc.eventos
ADD FOREIGN KEY (SALA_ID) REFERENCES java_jdbc.salas (ID_SALA)

ALTER TABLE java_jdbc.palestras 
ADD FOREIGN KEY (EVENTO_ID) REFERENCES java_jdbc.eventos (ID_EVENTO)

ALTER TABLE java_jdbc.palestras 
ADD FOREIGN KEY (SALA_ID) REFERENCES java_jdbc.salas (ID_SALA)

